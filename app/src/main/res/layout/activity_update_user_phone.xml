<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/my_white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">

          <ImageView
              android:id="@+id/iv_back"
              android:layout_width="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_centerVertical="true"
              android:background="@mipmap/backarrow"
              android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="修改手机号"
            android:textColor="@color/main1"
            android:textSize="18sp" />

        <View
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            />

       </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="48dp"
        >

        <EditText
            android:id="@+id/edit_new_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入新手机号"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/main1"
            android:textColorHint="@color/main3"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_line"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="48dp"
        >

        <EditText
            android:id="@+id/edit_yanzheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入验证码"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/main1"
            android:textColorHint="@color/main3"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />


        <Button
            android:id="@+id/bt_getCode"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yanzheng_bg"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="获取验证码"
            android:textColor="@color/main3"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_line" />
    </RelativeLayout>



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="48dp"
        >

        <EditText
            android:id="@+id/edit_old_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入旧手机号"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/main1"
            android:textColorHint="@color/main3"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_line"
            />
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="48dp"
        >

        <EditText
            android:id="@+id/edit_yanzheng2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入验证码"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/main1"
            android:textColorHint="@color/main3"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />


        <Button
            android:id="@+id/bt_getCode2"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yanzheng_bg"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="获取验证码"
            android:textColor="@color/main3"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"

            android:background="@color/gray_line" />
    </RelativeLayout>


        <Button
                android:id="@+id/bt_sure"
                android:layout_width="match_parent"
                android:text="确认"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:background="@drawable/white_bg"
                android:textColor="@color/new_lan"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_height="50dp"/>






</LinearLayout>